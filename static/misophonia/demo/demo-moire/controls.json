        {
            "type": "toggle",
            "label": "Invert texture0",
            "uniform": "u_colInv0",
            "hotkey": "a",
            "default": false
        },
        {
            "type": "toggle",
            "label": "Invert texture1",
            "uniform": "u_colInv1",
            "hotkey": "s",
            "default": true
        },
        {
            "type": "slider",
            "label": "Phase",
            "uniform": "u_tPhase",
            "min": 0,
            "max": 2,
            "step": 0.01,
            "default": 1
