        {
            "type": "slider",
            "label": "rotate",
            "uniform": "u_ra",
            "min": 0.0,
            "max": 2.0,
            "default": 0.0,
            "step": 0.01
        },
        {
            "type": "toggle",
            "label": "time scroll",
            "uniform": "u_timescroll",
            "default": true
        },
        {
            "type": "xy-plane",
            "uniform": "u_mv",
            "label": "Move",
            "min": {
                "x": -1,
                "y": -1
            },
            "max": {
                "x": 1,
                "y": 1
            },
            "default": {
                "x": 0,
                "y": 0
            }
        }
    ],
    "inputs": [
        {
            "name": "A",
            "description": "texture to mix",
            "required": false
        },
        {
            "name": "B",
            "description": "texture to mix",
            "required": false
        }
