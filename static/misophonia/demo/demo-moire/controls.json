{
    "name": "moire",
    "controls": [
        {
            "type": "slider",
            "label": "scroll speed",
            "uniform": "u_scroll",
            "min": -10.0,
            "max": 10.0,
            "default": -1.0,
            "step": 0.5
        },
        {
            "type": "slider",
            "label": "width",
            "uniform": "u_width",
            "min": 0.0,
            "max": 1.0,
            "default": 0.5,
            "step": 0.01
        },
        {
            "type": "slider",
            "label": "smoothness",
            "uniform": "u_smoothness",
            "min": 0.0,
            "max": 1.0,
            "default": 0.0,
            "step": 0.01
        },
        {
            "type": "slider",
            "label": "mix 0",
            "uniform": "u_tmxa",
            "min": 0,
            "max": 1,
            "default": 0,
            "step": 0.01
        },
        {
            "type": "slider",
            "label": "mix 1",
            "uniform": "u_tmxb",
            "min": 0,
            "max": 1,
            "default": 0,
            "step": 0.01
        },
        {
            "type": "slider",
            "label": "scale",
            "uniform": "u_scale",
            "min": 0.0,
            "max": 20.0,
            "default": 10.0,
            "step": 0.5
        },
        {
            "type": "slider",
            "label": "mode",
            "uniform": "u_mode",
            "min": 1,
            "max": 2,
            "default": 1,
            "step": 1
