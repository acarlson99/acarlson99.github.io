{
    "name": "color smear",
    "controls": [
        {
            "type": "slider",
            "label": "smear dropoff",
            "uniform": "u_dropoff",
            "min": 0,
            "max": 1,
            "default": 1,
            "step": 0.0001
        },
        {
            "type": "slider",
            "label": "intensity",
            "uniform": "u_intensity",
            "fixedPrecision": 4,
            "min": 0,
            "max": 0.06,
            "default": 0,
            "step": 0.0001
        },
        {
            "type": "xy-plane",
            "uniform": "u_direction",
            "label": "direction",
            "min": {
                "x": -1,
                "y": -1
            },
            "max": {
                "x": 1,
                "y": 1
            },
            "default": {
                "x": 1,
                "y": 0
            }
        },
        {
            "type": "toggle",
            "uniform": "u_useNormalMap",
            "label": "use normal map",
            "default": false
        },
        {
            "type": "toggle",
            "uniform": "u_sameDirection",
            "label": "influences how to treat `direction` input",
            "default": false
        },
        {
            "type": "toggle",
            "uniform": "u_invertDirection",
            "label": "invert smear direction",
            "default": false
        }
    ],
    "inputs": [
        {
            "name": "self",
            "description": "the current buffer (for self-sampling)",
            "autoAssign": "self",
            "required": true
        },
        {
            "name": "reference",
            "description": "the image to which to apply the effect",
            "required": true
        },
        {
            "name": "normal map",
            "description": "smear in direction of normal if turned on",
            "required": false
        }
    ]
}